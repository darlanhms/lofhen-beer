{
  "extends": "tsconfig/node-app.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "declaration": true,
    "paths": {
      "@entities/*": ["entities/*"],
      "@core/*": ["core/*"],
      "@infra/*": ["infra/*"],
      "@useCases/*": ["useCases/*"],
      "@mappers/*": ["mappers/*"],
      "@repositories/*": ["repositories/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"],
      "@providers/*": ["providers/*"]
    }
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
